<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="../tests/unit/Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Sanity">
            <file>../tests/unit/SanityTest.php</file>
        </testsuite>
        <testsuite name="All">
            <directory suffix='.php'>../tests/unit/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>../src</directory>
        </whitelist>
    </filter>
    <logging>
        <log
                type="coverage-html"
                target="../docs/html/coverage"
                lowUpperBound="50"
                highLowerBound="80"
        />
        <log type="testdox-html" target="../docs/html/phpunit/testdox.html" />
        <log type="coverage-clover" target="../docs/xml/clover.xml"/>
        <log type="coverage-xml" target="../docs/xml/coverage/"/>
        <log type="junit" target="../docs/xml/phpunit.xml" />
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
    </logging>
</phpunit>
